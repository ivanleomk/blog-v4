---
import type { CollectionEntry } from "astro:content";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import FormattedDate from "../components/FormattedDate.astro";

type Props = CollectionEntry<"blog">["data"];

const { title, publishedAt } = Astro.props;
---

<html lang="en">
  <body class="max-w-4xl mx-auto mx-4">
    <Header />
    <main class="max-w-4xl mx-auto px-4">
      <article class="w-full">
        <div class="title">
          <div class="space-y-4">
            <h1 class="text-4xl font-bold">{title}</h1>
            <div class="text-sm text-gray-500">
              Last updated on <FormattedDate date={publishedAt} />
            </div>
            <!-- <hr class="border-t border-gray-300 my-6" /> -->
          </div>
          <div class="py-4"></div>
          <div
            class="prose prose-h1:text-md prose-h2:text-md prose-h2:font-normal prose-h2:no-underline prose-p:text-justify prose-img:rounded-xl prose-headings:underline max-w-none prose-xl"
          >
            <slot />
          </div>
        </div>
      </article>
      <Footer />
    </main>
  </body>
</html>
